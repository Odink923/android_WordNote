<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lol1"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="@drawable/rounded_background"
        android:orientation="horizontal">

        <EditText
        android:id="@+id/editText"
        android:background="@drawable/rounded_search"
        android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="19dp"
        android:layout_height="40dp"
        android:hint="Пошук" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lol2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lol1"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="19dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="18dp"
        android:text="Модулі"/>
        <TextView
            android:id="@+id/myTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textColor="@color/purple_500"
            android:textSize="23dp"
            android:text="+"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/purple_500"
            android:text="Перглянути все"
           />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lol3"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="19dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/lol2"
        android:alpha="0.3"
        android:background="@drawable/rounded_card">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:text="⋘"/>
        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:text="⋙"

            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rounded_search"
        app:layout_constraintTop_toBottomOf="@+id/lol2"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="49dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="25dp"
            android:textSize="18dp"
            android:text="Назва модуля"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="15 термінів"/>


        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_500"
            android:layout_marginLeft="25dp"
            android:text="Редагувати"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/lol5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lol3"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="19dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Папки"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textColor="@color/purple_500"
            android:textSize="23dp"
            android:text="+"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/purple_500"
            android:text="Перглянути все"
            />
    </LinearLayout>













    <LinearLayout
        android:id="@+id/lol6"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="19dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/lol5"
        android:alpha="0.3"
        android:background="@drawable/rounded_card">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:text="⋘"/>
        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:text="⋙"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rounded_search"
        app:layout_constraintTop_toBottomOf="@+id/lol5"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="49dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="25dp"
            android:textSize="18dp"
            android:text="Назва папки"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="15 модулів"/>


    </LinearLayout>






    <LinearLayout
        android:id="@+id/lol7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lol6"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="19dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Обране"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textColor="@color/purple_500"
            android:textSize="23dp"
            android:text="+"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/purple_500"
            android:text="Перглянути все"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lol8"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="19dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/lol7"
        android:alpha="0.3"
        android:background="@drawable/rounded_card">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:text="⋘"/>
        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:text="⋙"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rounded_search"
        app:layout_constraintTop_toBottomOf="@+id/lol7"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="49dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="25dp"
            android:textSize="18dp"
            android:text="Назва папки"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="15 модулів"/>


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>